{{#if tweets}}
  <ul class="tweets">
    {{#each tweets}}
      <div class="card">
        <div class="card-content">
          <a class="card-title" href="/tweet/{{id}}">
            {{ content }}
          </a>
        </div>
        <div class="card-action">
          <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
          <span class="tweet__date">{{ createdAt }}</span>
          <span class="tweet_comments">{{ comments.length }} Comments</span>
        </div>
      </div>
    {{/each}}
  </ul>
{{/if}}